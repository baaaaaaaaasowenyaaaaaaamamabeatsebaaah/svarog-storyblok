{
  "root": true,
  "env": {
    "browser": true,
    "es2022": true,
    "node": true,
    "vitest": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["error", { "varsIgnorePattern": "^(describe|it|test|expect|vi)$" }]
  },
  "globals": {
    "describe": "readonly",
    "it": "readonly",
    "test": "readonly",
    "expect": "readonly",
    "vi": "readonly"
  },
  "ignorePatterns": ["node_modules/", "dist/", "coverage/"]
}
